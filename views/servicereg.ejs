    <div class="two-grids">
        <div class="mid-class">
            
            <div class="txt-left-side editContent" style="border-radius: 40px ;color: rgb(0, 0, 0); font-size: 16px; background-color: rgb(255, 255, 255); font-family: &quot;Open Sans&quot;, sans-serif;">
                <h2 class="editContent"> Sign Up Here </h2>
                <form action="/reg" enctype="multipart/form-data" method="POST">
                    <b><label style="color: tomato;">Email</label></b>
                    <div class="form-left-to editContent">
                        <span class="fa fa-user-o" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                        <input type="email" name="username" placeholder="Email" required="">

                        <div class="clear"></div>
                    </div>
                    <b><label style="color: tomato;">Name</label></b>
                    <div class="form-left-to editContent" >
                        <span class="fa fa-user-o" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                        <input type="text" name="name" placeholder="Name" required="">

                        <div class="clear"></div>
                    </div>
                    <b><label style="color: tomato;">Contact Number</label></b>
                    <div class="form-left-to editContent">
                        <span class="fa fa-phone" aria-hidden="true"></span>
                        <input type="text" name="phone" placeholder="Contact Number" required="">

                        <div class="clear"></div>
                    </div>
                    <b><label style="color: tomato;">Password</label></b>
                    <div class="form-left-to editContent">

                        <span class="fa fa-lock" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                        <input type="password" name="password" placeholder="Password" required="">
                        <div class="clear"></div>
                    </div>
                    <b><label style="color: tomato;">Firm Name</label></b>
                    <div class="form-left-to editContent">

                      <span class="fa fa-user-o" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                      <input type="text" name="firm" placeholder="Firm Name" required="">
                      <div class="clear"></div>
                  </div> 
                  <b><label style="color: tomato;">Address<label></b>
                  <div class="form-left-to editContent">

                    <span class="fas fa-map-marker-alt" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                    <input type="text" name="address" placeholder="Address" required="">
                    <div class="clear"></div>
                </div>
                <b><label style="color: tomato;">Vehicle Number</label></b>
                    <div class="form-left-to editContent">

                      <span class="fas fa-car" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                      <input type="text" name="number" placeholder="Vehicle Number" required="">
                      <div class="clear"></div>
                  </div>
                  <b><label style="color: tomato;">GST Number</label></b>
                  <div class="form-left-to editContent">

                    <span class="fa fa-lock" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                    <input type="text" name="gst" placeholder="Gst Number" required="">
                    <div class="clear"></div>
                </div>
                <b><label style="color: tomato;">City</label></b>
                <div class="form-left-to editContent">

                  <span class="fas fa-map-marker-alt" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                  <input type="text" name="city" placeholder="City" required="">
                  <div class="clear"></div>
              </div> 
              <b><label style="color: tomato;">Pin Code</label></b>
              <div class="form-left-to editContent">

                <span class="fas fa-map-marker-alt" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                <input type="text" name="pin" placeholder="Tunnel Area Pin Code" required="">
                <div class="clear"></div>
            </div>
            <b><label style="color: tomato;">State</label></b>
            <div class="form-left-to editContent">

              <span class="fas fa-map-marker-alt" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
              <input type="text" name="state" placeholder="State" required="">
              <div class="clear"></div>
          </div>
          
                    
                    
                
                
                <div class="clear"></div>
            </div>
            <div class="txt-left-side editContent" style="border-radius: 40px ;color: rgb(0, 0, 0); font-size: 16px; background-color: rgb(255, 255, 255); font-family: &quot;Open Sans&quot;, sans-serif;">
                <h2 class="editContent">Following documents required</h2>
                <h4 style="color: tomato;"><b>Please submit as images or document files</b></h4>
                <br>
                <h2 class="editContent">Your Photo</h2>
                <h2 class="editContent">Pan Card</h2>
                <h2 class="editContent">Aadhar Card</h2>
                <h2 class="editContent">GST Certificate</h2>
                <h2 class="editContent">Cheque/Passbook</h2>
                <h2 class="editContent">Agreement</h2>
                
                <div class="form-left-to editContent">
                    <span style="margin-right: 10%;"  aria-hidden="true" style="outline: none; cursor: inherit;">Photo</span>
                    
                    <input type="file" name="files" placeholder="Photo" required="" multiple>

                    <div class="clear"></div>
                    
                </div>
                <b><label style="color: tomato;">Please select all the files together and submit</label></b>
                <div class="btnn">
                    <button type="submit" class=" btn" style="outline: none; cursor: inherit;">Sign Up </button>
                </div>
