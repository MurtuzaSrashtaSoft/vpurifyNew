	<div id="page" class="page">

    
    <div class="two-grids">
        <div class="mid-class">
            
            <div class="txt-left-side editContent" style="border-radius: 40px ;color: rgb(0, 0, 0); font-size: 16px; background-color: rgb(255, 255, 255); font-family: &quot;Open Sans&quot;, sans-serif;">
                <h2 class="editContent"> Sign Up Here </h2>
                <form action="/empreg" method="POST" enctype="multipart/form-data">
                    <div class="form-left-to editContent">
                        <span class="fa fa-user-o" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                        <input type="email" name="username" placeholder="Email" required="">

                        <div class="clear"></div>
                    </div>
                    <div class="form-left-to editContent">
                        <span class="fa fa-user-o" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                        <input type="text" name="name" placeholder="Name" required="">

                        <div class="clear"></div>
                    </div>
                    <div class="form-left-to editContent">
                        <span class="fa fa-phone" aria-hidden="true"></span>
                        <input type="text" name="phone" placeholder="Contact Number" required="">

                        <div class="clear"></div>
                    </div>
                    <div class="form-left-to editContent">

                        <span class="fa fa-lock" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                        <input type="password" name="password" placeholder="Password" required="">
                        <div class="clear"></div>
                    </div>
                    
                  <div class="form-left-to editContent">

                    <span class="fas fa-book-open" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                    <input type="text" name="education" placeholder="Your Education" required="">
                    <div class="clear"></div>
                </div>
                <div class="form-left-to editContent">

                    <span class="fas fa-briefcase" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                    <input type="text" name="experience" placeholder="Experience" required="">
                    <div class="clear"></div>
                </div>
                    
                  
                <div class="form-left-to editContent">

                  <span class="fas fa-map-marker-alt" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                  <input type="text" name="city" placeholder="City" required="">
                  <div class="clear"></div>
              </div> 
              <div class="form-left-to editContent">

                <span class="fas fa-map-marker-alt" aria-hidden="true" style="outline: none; cursor: inherit;"></span>
                <input type="text" name="pin" placeholder="Pin Code" required="">
                <div class="clear"></div>
            </div>
            <div class="form-left-to editContent">
                <span style="margin-right: 10%;"  aria-hidden="true" style="outline: none; cursor: inherit;">Resume</span>
                
                <input type="file" name="files" placeholder="Photo" required="" multiple>

                <div class="clear"></div>
            </div>
            <b><label style="color: tomato;">Submit as images or document</label></b>
            
          
                    
                    <div class="btnn">
                        <button type="submit" class=" btn" style="outline: none; cursor: inherit;">Sign Up </button>
                    </div>
                </form>
